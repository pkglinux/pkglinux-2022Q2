ZFS_SYSV_RC0=@ZFS_SYSV_RC0@
ZFS_SYSV_RC1=@ZFS_SYSV_RC1@
ZFS_SYSV_RC2=@ZFS_SYSV_RC2@
ZFS_SYSV_RC3=@ZFS_SYSV_RC3@
ZFS_SYSV_RC4=@ZFS_SYSV_RC4@
ZFS_SYSV_RC5=@ZFS_SYSV_RC5@

case "${STAGE}" in

POST-INSTALL)
	${ZFS_SYSV_RC0}/sbin/chkconfig --add "${ZFS_SYSV_RC1}"
	${ZFS_SYSV_RC0}/sbin/chkconfig --add "${ZFS_SYSV_RC2}"
	${ZFS_SYSV_RC0}/sbin/chkconfig --add "${ZFS_SYSV_RC3}"
	${ZFS_SYSV_RC0}/sbin/chkconfig --add "${ZFS_SYSV_RC4}"
	${ZFS_SYSV_RC0}/sbin/chkconfig --add "${ZFS_SYSV_RC5}"
	${ZFS_SYSV_RC0}/sbin/chkconfig "${ZFS_SYSV_RC1}" on
	${ZFS_SYSV_RC0}/sbin/chkconfig "${ZFS_SYSV_RC2}" on
	${ZFS_SYSV_RC0}/sbin/chkconfig "${ZFS_SYSV_RC3}" on
	${ZFS_SYSV_RC0}/sbin/chkconfig "${ZFS_SYSV_RC4}" on
#	${ZFS_SYSV_RC0}/sbin/chkconfig "${ZFS_SYSV_RC5}" on
	;;
esac
